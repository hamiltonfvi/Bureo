<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash Screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <!-- Home Image-->
    <style name="HomeImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/tampabay</item>
    </style>

    <!-- Home Panel -->
    <style name="HomePanel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:paddingLeft">@dimen/dimen_10dp</item>
        <item name="android:paddingRight">@dimen/dimen_10dp</item>
    </style>

    <!-- Panel Header -->
    <style name="PanelHeader" parent="HomePanel">
        <item name="android:layout_marginTop">@dimen/dimen_20dp</item>
        <item name="android:paddingTop">@dimen/dimen_5dp</item>
        <item name="android:paddingBottom">@dimen/dimen_5dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text Description in Home Panel -->
    <style name="HomePanelGrey" parent="HomePanel">
        <item name="android:background">@color/colorLightGrey</item>
        <item name="android:paddingTop">@dimen/dimen_16dp</item>
        <item name="android:paddingBottom">@dimen/dimen_16dp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <!-- Tab Appearance -->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabBackground">@drawable/tab_color_selector</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabMaxWidth">@dimen/dimen_0dp</item>
        <item name="tabPaddingStart">@dimen/tab_padding</item>
        <item name="tabPaddingEnd">@dimen/tab_padding</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="CustomTabAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/colorText</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Details TextView Items-->
    <style name="DetailsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:autoLink">all</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:linksClickable">true</item>
    </style>

    <!-- ListView TextView Items -->
    <style name="ListTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:layout_marginLeft">@dimen/dimen_10dp</item>
    </style>

</resources>