<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_20dp">

        <ImageView
            android:id="@+id/image_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/image_description"
            android:scaleType="fitXY"
            android:src="@drawable/tampabay" />

        <TextView
            android:id="@+id/text_place_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:textColor="@color/colorText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:contentDescription="@string/address_icon"
                    android:src="@drawable/address" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:contentDescription="@string/phone_number_icon"
                    android:src="@drawable/phone_number" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:contentDescription="@string/website_icon"
                    android:src="@drawable/website" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_place_address"
                    style="@style/DetailsText"
                    android:layout_marginTop="@dimen/dimen_19dp" />

                <TextView
                    android:id="@+id/text_place_phone_number"
                    style="@style/DetailsText"
                    android:layout_marginTop="@dimen/dimen_20dp" />

                <TextView
                    android:id="@+id/text_place_website"
                    style="@style/DetailsText"
                    android:layout_marginTop="@dimen/dimen_20dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>